<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <style name="add_employee_edit_text">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">15dp</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:backgroundTint" tools:targetApi="lollipop">@color/black</item>
        <item name="android:textColorHint">@color/text_color</item>
    </style>
    <style name="spinner_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:dropDownVerticalOffset">45dp</item>
        <item name="android:spinnerMode">dropdown</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:background">@drawable/spinner_shape</item>
        <item name="android:textColor">@color/ash_light</item>
        <item name="android:gravity">center</item>
    </style>
    <style name="user_image_style">
        <item name="android:layout_width">85dp</item>
        <item name="android:layout_height">85dp</item>
        <item name="android:layout_marginRight">10dp</item>
        <item name="android:src">@drawable/user_image</item>
        <item name="android:layout_marginEnd" tools:targetApi="jelly_bean_mr1">10dp</item>
    </style>
    <style name="name_text_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">22sp</item>
        <item name="android:textColor">@color/dark_color</item>
    </style>
    <style name="name_bottom_text_color">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">16sp</item>
        <item name="android:gravity">center|start</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:layout_gravity">start</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/ash_light_text</item>
    </style>
</resources>
