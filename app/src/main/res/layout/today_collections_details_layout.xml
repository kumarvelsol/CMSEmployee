<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/white"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="15dp"
        android:orientation="horizontal">
        <de.hdodenhof.circleimageview.CircleImageView
            style="@style/user_image_style"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical">
            <TextView
                style="@style/name_text_style"
                android:text="Umesh"/>
            <TextView
                style="@style/name_bottom_text_color"
                android:drawablePadding="10dp"
                android:text="8179893241"
                android:drawableLeft="@drawable/call_image"
                android:drawableStart="@drawable/call_image" />
            <TextView
                style="@style/name_bottom_text_color"
                android:text="Bill Month : 5th"/>
        </LinearLayout>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/ash_light"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="horizontal"
        android:gravity="center"
        android:weightSum="1">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"
            android:paddingLeft="15dp"
            android:drawableLeft="@drawable/pending_amount_symbol"
            android:drawablePadding="8dp"
            android:drawableStart="@drawable/pending_amount_symbol"
            android:text="Bill Amount :"
            android:textColor="@color/text_color"
            android:textSize="16sp" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="@string/Rs"
            android:textStyle="bold"
            android:textColor="@color/text_ash_color"
            android:textSize="20sp" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="5dp"
            android:text="500"
            android:textColor="@color/text_ash_color"
            android:textSize="20sp"
            android:textStyle="bold" />
    </LinearLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_gravity="center"
        android:paddingBottom="8dp"
        android:textSize="16sp"
        android:text="Collect Before  :  00 - 00 - 0000"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.8dp"
        android:background="@color/ash_light"/>
</LinearLayout>