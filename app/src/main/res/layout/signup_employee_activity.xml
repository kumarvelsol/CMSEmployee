<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.cms.velsol.cmsemployee.employee.SignupEmployee">
    <LinearLayout
        android:id="@+id/userrecoginse_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="visible"
        android:orientation="vertical">
        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <EditText
                android:id="@+id/signup_employee_userid"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="User ID"/>
        </android.support.design.widget.TextInputLayout>
        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <EditText
                android:id="@+id/signup_employee_operatorid"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Operator ID"/>
        </android.support.design.widget.TextInputLayout>
        <Button
            android:id="@+id/btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="submit"
            android:layout_gravity="center"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/emplloyee_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="visible"
        android:orientation="vertical">
        <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_height="match_parent"
            android:layout_width="match_parent"
            android:layout_above="@+id/add_employee_bottom_bar">
            <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:padding="10dp"
                android:orientation="vertical">
                <ImageView
                    android:id="@+id/image_employee"
                    android:layout_width="100dp"
                    android:layout_height="100dp" />
                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:hintEnabled="false">
                    <EditText
                        android:id="@+id/operator_employee_input"
                        style="@style/add_employee_edit_text"
                        android:hint="Operator Id"/>
                </android.support.design.widget.TextInputLayout>
                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"

                    android:layout_height="wrap_content"
                    app:hintEnabled="false">
                    <EditText
                        android:id="@+id/name_employee_input"
                        style="@style/add_employee_edit_text"
                        android:hint="Name"/>
                </android.support.design.widget.TextInputLayout>
                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:hintEnabled="false">
                    <EditText
                        android:id="@+id/empid_employee"
                        style="@style/add_employee_edit_text"
                        android:hint="Employe Id"/>
                </android.support.design.widget.TextInputLayout>
                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:hintEnabled="false">
                    <EditText
                        android:id="@+id/phonenumber_employee_input"
                        style="@style/add_employee_edit_text"
                        android:hint="Phone Number"/>
                </android.support.design.widget.TextInputLayout>
                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:hintEnabled="false">
                    <EditText
                        android:id="@+id/adrress_employee_input"
                        style="@style/add_employee_edit_text"
                        android:hint="Address"/>
                </android.support.design.widget.TextInputLayout>
                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:hintEnabled="false">
                    <EditText
                        android:id="@+id/password_employee_input"
                        style="@style/add_employee_edit_text"
                        android:hint="Password"/>
                </android.support.design.widget.TextInputLayout>
                <Spinner
                    android:id="@+id/spinner_employee"
                    style="@style/spinner_style"
                    android:paddingLeft="15dp"
                    android:background="@drawable/spinner_shape"/>
                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:hintEnabled="false">
                    <EditText
                        android:id="@+id/idproof_employee_input"
                        style="@style/add_employee_edit_text"
                        android:hint="Id proof number"/>
                </android.support.design.widget.TextInputLayout>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Provide Access to Employee"
                    android:layout_marginTop="10dp"
                    android:padding="8dp"
                    android:fontFamily="serif"
                    android:background="@color/colorPrimary"
                    android:textSize="19sp"
                    android:textColor="@color/white"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <RadioGroup
                        android:id="@+id/employee_radiogroup_select"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <RadioButton
                            android:id="@+id/employee_collection_radiobutton"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="16sp"
                            android:checked="true"
                            android:text="Collection"/>
                        <RadioButton
                            android:id="@+id/employee_service_radiobutton"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="16sp"
                            android:text="Service"/>
                        <RadioButton
                            android:id="@+id/employee_collecservice_radiobutton"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="5dp"
                            android:text="Collection and Service"/>
                    </RadioGroup>
                </LinearLayout>
            </LinearLayout>
        </ScrollView>
        <LinearLayout
            android:id="@+id/add_employee_bottom_bar"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal"
            android:background="@color/colorPrimary"
            android:layout_alignParentBottom="true"
            android:weightSum="1">
            <Button
                android:id="@+id/clear_employee_button"
                android:layout_weight="0.5"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:background="@android:color/transparent"
                android:textAllCaps="false"
                android:textSize="19sp"
                android:textColor="@color/white"
                android:fontFamily="serif"
                android:text="Clear"/>
            <View
                android:layout_width="2dp"
                android:layout_height="match_parent"
                android:background="@color/white"/>
            <Button
                android:id="@+id/add_employee_button"
                android:layout_weight="0.5"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:background="@android:color/transparent"
                android:textAllCaps="false"
                android:textSize="19sp"
                android:textColor="@color/white"
                android:fontFamily="serif"
                android:text="Add"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
