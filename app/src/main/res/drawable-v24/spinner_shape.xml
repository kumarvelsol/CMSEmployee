<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item
        android:height="50dp">
        <shape
            android:shape="rectangle">
            <size
                android:width="500dp"
                android:height="50dp"/>
        </shape>

    </item>
    <item
        android:top="46dp">
        <shape
            android:shape="line">
            <stroke
                android:width="1dp"
                android:color="@color/black">
            </stroke>
        </shape>
    </item>
    <item
        android:width="20dp"
        android:height="20dp"
        android:gravity="right"
        android:top="20dp"
        android:bottom="10dp">
        <bitmap android:src="@drawable/arrow_corner"/>
    </item>
</layer-list>