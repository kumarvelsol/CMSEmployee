<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape
            android:shape="rectangle">
            <size
                android:width="500dp"
                android:height="50dp"/>
        </shape>
    </item>
    <item
        android:top="46dp">
        <shape
            android:shape="line">
            <stroke
                android:width="1dp"
                android:color="@color/ash_light">
            </stroke>
        </shape>
    </item>
    <item
        android:width="20dp"
        android:height="20dp"
        android:gravity="right"
        android:top="20dp"
        android:right="5dp"
        android:bottom="0dp">
        <bitmap android:src="@drawable/drop_down"/>
    </item>
</layer-list>